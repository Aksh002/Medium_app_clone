generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Users{
  id        String @id @default(uuid())
  email     String
  userName  String
  firstName String
  hashPass  String
  posts     Posts[]
}

model Posts{
  id        String @id @default(uuid())
  title     String
  subTitle  String
  content   String
  published Boolean @default(false)
  authorId  String
  author    Users    @relation(fields: [authorId],references: [id]) 

}